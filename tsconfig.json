{
  "compilerOptions": {
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "target": "ES2024",
    "module": "ESNext",
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["*"]
    }
  },
  "include": ["src"]
}
